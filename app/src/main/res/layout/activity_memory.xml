<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/theTitle"
        android:layout_width="271dp"
        android:layout_height="97dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="300dp"
        android:text="TextView"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="357dp"
        android:layout_height="238dp"
        android:layout_marginStart="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theTitle" />



    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="644dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="415dp"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-2dp" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:tint="#686767"
        app:layout_constraintEnd_toStartOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/createButton"
        app:srcCompat="@drawable/home_icon" />

    <ImageButton
        android:id="@+id/createButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:tint="#686767"
        app:layout_constraintEnd_toStartOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/create_icon" />

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:tint="#686767"
        app:layout_constraintEnd_toStartOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/createButton"
        app:srcCompat="@drawable/map_icon" />

    <TextView
        android:id="@+id/homeButtonText"
        android:layout_width="45dp"
        android:layout_height="17dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:text="Home"
        android:textColor="#686767"
        app:layout_constraintEnd_toEndOf="@+id/homeButton"
        app:layout_constraintTop_toTopOf="@+id/homeButton"
        tools:text="Home" />

    <TextView
        android:id="@+id/createButtonText"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:text="Create"
        android:textColor="#686767"
        app:layout_constraintEnd_toEndOf="@+id/createButton"
        app:layout_constraintTop_toTopOf="@+id/createButton"
        tools:text="Create" />

    <TextView
        android:id="@+id/mapButtonText"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:text="Map"
        android:textColor="#686767"
        app:layout_constraintEnd_toEndOf="@+id/mapButton"
        app:layout_constraintTop_toTopOf="@+id/mapButton"
        tools:text="Map" />

    <android.support.v4.view.ViewPager
        android:id="@+id/imageSlider"
        android:layout_width="fill_parent"
        android:layout_height="292dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/theTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_share" />


</android.support.constraint.ConstraintLayout>